{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "types": ["node"],
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false
  },
  "include": ["vite.config.ts", "vitest.config.ts"]
}
